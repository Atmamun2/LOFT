-- Houses table
CREATE TABLE houses (
    id INTEGER PRIMARY KEY,
    name TEXT NOT NULL,
    founder_id INTEGER,
    founded_date DATE,
    vision TEXT,
    net_worth DECIMAL,
    status TEXT DEFAULT 'Active'  -- Active, Merged, Disbanded
);

-- Members table
CREATE TABLE members (
    id INTEGER PRIMARY KEY,
    house_id INTEGER,
    name TEXT NOT NULL,
    role TEXT,  -- Founder, President, Member
    contribution DECIMAL,
    status TEXT DEFAULT 'Active',  -- Active, Nullified, Under Review
    warnings INTEGER DEFAULT 0,
    FOREIGN KEY (house_id) REFERENCES houses(id)
);

-- Transactions table
CREATE TABLE transactions (
    id INTEGER PRIMARY KEY,
    house_id INTEGER,
    member_id INTEGER,
    description TEXT,
    amount DECIMAL,
    type TEXT,  -- Revenue, Expense, Asset Purchase
    date DATE,
    verified BOOLEAN DEFAULT 0,
    FOREIGN KEY (house_id) REFERENCES houses(id),
    FOREIGN KEY (member_id) REFERENCES members(id)
);

-- Assets table
CREATE TABLE assets (
    id INTEGER PRIMARY KEY,
    house_id INTEGER,
    name TEXT,
    type TEXT,  -- Current, Fixed, Long-term
    value DECIMAL,
    FOREIGN KEY (house_id) REFERENCES houses(id)
);
